{
    "python.analysis.typeCheckingMode": "basic",
    "window.zoomLevel": 1,
    "editor.fontSize": 14,
    "python.languageServer": "Pylance", // ms-python.vscode-pylance
    "python.testing.unittestEnabled": true, // ms-python.python
    "python.testing.pytestEnabled": false,
    "python.testing.pytestArgs": [
      "."
    ], // -x to bail
    "python.defaultInterpreterPath": "venv/bin/python",
    "[python]": {
      "editor.defaultFormatter": "ms-python.black-formatter", // ms-python.python
      "editor.tabSize": 2,
      "editor.insertSpaces": true,
      "editor.formatOnSave": true,
      "editor.formatOnType": true,
      "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
      }
      },
      "[html]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.quickSuggestions": {
          "other": true,
          "comments": true,
          "strings": true
        }
      },
      "[django-html]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.quickSuggestions": {
          "other": true,
          "comments": true,
          "strings": true
        }
      },
        "files.associations": {
          "*.js": "javascript",
          "*.jsx": "javascriptreact",
          "*.xml": "html",
          "*.svg": "html",
          "*.html": "html",
          "django-html": "html", // batisteo.vscode-django
          "**/*.html": "html",
          "**/templates/**/*.html": "django-html",
          "**/base_templates/**/*.html": "django-html",
          "**/requirements{/**,*}.{txt,in}": "pip-requirements"
        },
        "emmet.includeLanguages": {
          "django-html": "html", // batisteo.vscode-django
          "javascript": "javascriptreact",
          "typescript": "typescriptreact"
        },
        "python.formatting.provider": "none",
        "python.testing.unittestArgs": [
          "-v",
          "-s",
          ".",
          "-p",
          "*test*.py"
        ]
      }
